<br>
<div class="container">
  <div class="row">
    <div class="col-5">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.label :login %><br />
            <%= f.text_field :login, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-custom" %>
          </div>    
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-3">
    </div>
    <div class="col-4">
      <br>
      <strong>Log in using your username/email and password. If you don't have account yet, click Sign up.</strong>
    </div>
  </div>
</div>
