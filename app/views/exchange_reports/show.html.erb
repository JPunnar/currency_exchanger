<div class="container-fluid">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
      <h1>Currency Exchange Report</h1>
      <br>
      <table class="table">
        <tr>
          <th>Date of exchange</th>
          <th>Rate from past</th>
          <th>Predicted rate</th>
          <th>Profit / Loss</th>
        </tr>
        <% @exchange_report.exchange_rates.each do |exchange_rate| %>
          <tr>
            <td><%= exchange_rate.date %></td>
            <td><%= exchange_rate.rate %></td>
            <td><%= exchange_rate.rate + 0.5 %></td>
            <td><%= 0.5 %></td>
          </tr>
        <% end %>
      </table>
      <br>
      <%= link_to root_path, class: 'btn btn-primary' do %>
        <%= fa_icon "chevron-circle-left", text: "Back" %>
      <% end %>
    </div>
    <div class="col-1">
    </div>
  </div>
</div>
